{
	"extends": [
		"wikimedia",
		"wikimedia/client",
		"wikimedia/language/es6"
	],
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"comma-dangle": [ "error", {
			"arrays": "always-multiline",
			"objects": "always-multiline",
			"imports": "always-multiline",
			"exports": "always-multiline",
			"functions": "always-multiline"
		} ],
		"func-style": [ "error", "declaration" ]
	}
}
