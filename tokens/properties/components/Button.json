{
    "wikit-Button": {
        "font-family": {
            "value": "{font.family.style.label.value}"
        },
        "font-weight": {
            "value": "{font.weight.bold.value}"
        },
        "font-size": {
            "value": "{font.size.style.label.value}"
        },
        "line-height": {
            "value": "{font.line-height.style.label.value}"
        },
        "default-cursor": {
            "value": "{cursor.pointer.value}"
        },
        "border-width": {
            "value": "{border.width.thin.value}"
        },
        "border-style": {
            "value": "{border.style.base.value}"
        },
        "border-radius": {
            "value": "{border.radius.base.value}"
        },
        "medium": {
            "padding-vertical": {
                "value": "{dimension.padding.vertical.medium.value}"
            },
            "padding-horizontal": {
                "value": "{dimension.padding.horizontal.medium.value}"
            }
        },
        "large": {
            "padding-vertical": {
                "value": "{dimension.padding.vertical.large.value}"
            },
            "padding-horizontal": {
                "value": "{dimension.padding.horizontal.large.value}"
            }
        },
        "neutral": {
            "default-color": {
                "value": "{font.color.base.value}"
            },
            "default-border-color": {
                "value": "{border.color.neutral.default.value}"
            },
            "default-background-color": {
                "value": "{background.color.neutral.default.value}"
            },
            "hover": {
                "color": {
                    "value": "{color.modifier.lighten.base-10.value}"
                },
                "border-color": {
                    "value": "{border.color.neutral.hover.value}"
                },
                "background-color": {
                    "value": "{background.color.neutral.hover.value}"
                }
            },
            "active": {
                "color": {
                    "value": "{font.color.emphasized.value}"
                },
                "border-color": {
                    "value": "{border.color.neutral.active.value}"
                },
                "background-color": {
                    "value": "{background.color.neutral.active.value}"
                }
            },
            "focus": {
                "color": {
                    "value": "{font.color.base.value}"
                },
                "border-color": {
                    "value": "{border.color.neutral.focus.value}"
                },
                "background-color": {
                    "value": "{background.color.neutral.hover.value}"
                },
                "box-shadow": {
                    "value": "{box-shadow.inset.focus.progressive.value}"
                }
            }
        },
        "disabled": {
            "cursor": {
                "value": "{cursor.default.value}"
            }
        }
    }
}

